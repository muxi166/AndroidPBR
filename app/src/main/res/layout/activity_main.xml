<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <Button
        android:id="@+id/sphere_scene_direct_light_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sphere Scene Direct Light"/>

    <Button
        android:id="@+id/sphere_scene_button"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sphere Scene"/>

    <Button
        android:id="@+id/monkey_scene_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Monkey Model Scene"/>

</LinearLayout>